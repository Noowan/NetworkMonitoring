        <TextBox Name="Pos4Name" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Width="200" Height="25" HorizontalAlignment="Left" Margin="70,-80,0,0"></TextBox>
        <TextBox Name="Pos4IP" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Width="200" Height="25" HorizontalAlignment="Left" Margin="70,-20,0,0"></TextBox>
        <TextBox Name="Pos4Login" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Width="200" Height="25" HorizontalAlignment="Left" Margin="70,40,0,0"></TextBox>
        <TextBox Name="Pos4Pass" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Width="200" Height="25" HorizontalAlignment="Left" Margin="70,110,0,0"></TextBox>
        <Button Grid.Column="1" Grid.Row="2" Grid.RowSpan="2" Height="20" Width="60" Content="Сохранить" FontSize="10" HorizontalAlignment="Right" Margin="30" PreviewMouseLeftButtonDown="Pos4Button_Click"></Button>

        <Label Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2"  Content="Общие настройки" HorizontalAlignment="Center" VerticalAlignment="Top" Height="25" VerticalContentAlignment="Top" Margin="-8"></Label>
        <CheckBox Content="Checkbox11111111111" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Margin="10,15,0,0" Height="25" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left"></CheckBox>
        <CheckBox Content="Checkbox22222222222" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="2" Margin="10,35,0,0" Height="25" Width="150" VerticalAlignment="Top" HorizontalAlignment="Left"></CheckBox>
