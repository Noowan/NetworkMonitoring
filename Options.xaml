        <TextBox Name="Pos2Name" Grid.Column="0" Grid.Row="2" Grid.RowSpan="2" Width="200" Height="25" HorizontalAlignment="Left" Margin="70,-80,0,0"></TextBox>
        <TextBox Name="Pos2IP" Grid.Column="0" Grid.Row="2" Grid.RowSpan="2" Width="200" Height="25" HorizontalAlignment="Left" Margin="70,-20,0,0"></TextBox>
        <TextBox Name="Pos2Login" Grid.Column="0" Grid.Row="2" Grid.RowSpan="2" Width="200" Height="25" HorizontalAlignment="Left" Margin="70,40,0,0"></TextBox>
        <TextBox Name="Pos2Pass" Grid.Column="0" Grid.Row="2" Grid.RowSpan="2" Width="200" Height="25" HorizontalAlignment="Left" Margin="70,110,0,0"></TextBox>
        <Button Grid.Column="0" Grid.Row="2" Grid.RowSpan="2" Height="20" Width="60" Content="Сохранить" FontSize="10" HorizontalAlignment="Right" Margin="30" PreviewMouseLeftButtonDown="Pos2Button_Click"></Button>

        <Label Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Content="Имя" HorizontalAlignment="Left" Margin="10,-80,0,0" Height="25" Width="50" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" FontSize="12"></Label>
